@model ERP.Models.WebModels.ShelfModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Session["MenuKey"] = 19;
    string btnText = "Save";
    var setDiasble = "false";
    if (Model != null)
    {
        if (Model.ShelfId > 0)
        {
            ViewBag.Title = "Update";
            btnText = "Update";
            setDiasble = "readonly";
        }
    }
}

@using (Html.BeginForm("Create", "Shelf", FormMethod.Post, new { @class = "form-horizontal", @id="ShelfCreateForm",role = "form" }))
{
    <div class="portlet light bg-inverse formBodyRemoveSideSpace formBodyMinHeight">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-bulb font-red-sunglo"></i>
                <span class="caption-subject font-red-sunglo bold uppercase">Shelf</span>
                <span class="caption-helper">@ViewBag.Title</span>
            </div>
            <div class="actions">
                <button class="btn default green-stripe toBeHidden" id="btnResetFltr" type="submit" form="ShelfCreateForm" name="save" onclick="return (ValidateFields(event));">
                    <i class="fa fa-save"></i>
                    <span class="hidden-480">
                        Save & Close
                    </span>
                </button>
                <a href="~/Shelf/Index" class="btn default yellow-stripe">
                    <i class="fa fa-list"></i>
                    <span class="hidden-480">
                        All Shelves
                    </span>
                </a>
            </div>
        </div>

        <div class="portlet-body form">
            <div class="container-fluid">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ShelfId)
                @Html.HiddenFor(m => m.RecCreatedBy)
                @Html.HiddenFor(m => m.RecCreatedDate)

                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.Title, new { @class = "col-md-3 control-label requiredLabel" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control mandatory", placeholder = "Title" })
                    </div>
                </div>

                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.Description, new { @class = "col-md-3 control-label requiredLabel" })
                    <div class="col-md-4">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control mandatory", placeholder = "Description" })
                    </div>
                </div>
            </div>

        </div>
    </div>
}


