@model ERP.Models.WebViewModels.SupplierBankAccountViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string btnText = "Save";
    var setDiasble = "false";
    if (Model != null && Model.supplierBankAccount.SupplierBankAccountId !=null)
    {
        if (Model.supplierBankAccount.SupplierBankAccountId > 0)
        {
            ViewBag.Title = "Update";
            btnText = "Update";
            setDiasble = "readonly";
        }
    }
}



<div class="portlet light bg-inverse formBodyRemoveSideSpace formBodyMinHeight">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-bulb font-red-sunglo"></i>
            <span class="caption-subject font-red-sunglo bold uppercase">Supplier Bank Account</span>
            <span class="caption-helper">@ViewBag.Title</span>
        </div>
        <div class="actions">
            <button class="btn default blue-stripe toBeHidden" id="btnFltr" type="submit" form="SupplierBankAccountForm" name="saveCreate" onclick="return (ValidateFields(event) && ValidateBill());">
                <i class="fa fa-plus-square-o"></i>
                <span class="hidden-480">
                    Save & New
                </span>
            </button>
            <button class="btn default green-stripe toBeHidden" id="btnFltr" type="submit" form="SupplierBankAccountForm" name="save" onclick="return (ValidateFields(event) && ValidateBill());">
                <i class="fa fa-save"></i>
                <span class="hidden-480">
                    Save & Close
                </span>
            </button>
            <a href="~/SupplierBankAccount/Index" class="btn default yellow-stripe">
                <i class="fa fa-list"></i>
                <span class="hidden-480">
                    All Bank Accounts
                </span>
            </a>
        </div>
    </div>


    @using (Html.BeginForm("Create", "SupplierBankAccount", FormMethod.Post, new { @class = "form-horizontal", @id = "SupplierBankAccountForm", role = "form" }))
    {
        <div class="portlet-body form">

                    <div class="container-fluid">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.supplierBankAccount.SupplierBankAccountId)
                        @Html.HiddenFor(m => m.supplierBankAccount.RecCreatedBy)
                        @Html.HiddenFor(m => m.supplierBankAccount.RecCreatedDate)

                        <div class="form-group margin-top-20">
                            @Html.Label("Account Title", new { @class = "col-md-3 control-label requiredLabel" })
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.supplierBankAccount.AccountTitle, new { @class = "form-control mandatory", placeholder = "Account Title", @id = "ExpenseDate" })
                            </div>
                        </div>
                        <div class="form-group margin-top-20">
                            @Html.Label("Supplier", new { @class = "col-md-3 control-label requiredLabel" })
                            <div class="col-md-4">
                                @Html.DropDownListFor(m => m.supplierBankAccount.SupplierId, new SelectList(Model.Vendors, "VendorId", "Name", Model.supplierBankAccount.SupplierId), "Select One", new { @class = "form-control  select2me mandatory", @id = "SupplierId" })
                            </div>
                        </div>
                        <div class="form-group margin-top-20">
                            @Html.Label("Bank Account No", new { @class = "col-md-3 control-label requiredLabel" })
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.supplierBankAccount.AccountNo, new { @class = "form-control mandatory", placeholder = "Bank Account No", @id = "ExpenseAmount" })
                            </div>
                        </div>
                        <div class="form-group margin-top-20">
                            @Html.Label("Is Active", new { @class = "col-md-3 control-label requiredLabel" })
                            <div class="col-md-4">
                                @Html.CheckBoxFor(m => m.supplierBankAccount.IsActive, new { @class = "form-control mandatory", placeholder = "Is Active", @id = "ExpenseAmount" })
                            </div>
                        </div>
                        <div class="form-group margin-top-20">
                            @Html.LabelFor(m => m.supplierBankAccount.Description, new { @class = "col-md-3 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(m => m.supplierBankAccount.Description, new { @class = "form-control", placeholder = "Description" })
                            </div>
                        </div>
                    </div>
                </div>

                }
            </div>
