@model ERP.Models.WebModels.CustomerModel
@{
    ViewBag.Title = "Create";
    string btnText = "Save";
    var setDiasble = "false";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Session["MenuKey"] = 6;
    Session["SubMenuKey"] = 1;
    
    if (Model != null)
    {
        if (Model.Id > 0)
        {
            ViewBag.Title = "Update";
            btnText = "Update";
            setDiasble = "readonly";
        }
    }
}

@using (Html.BeginForm("Create", "Customer", FormMethod.Post, new { @class = "form-horizontal",@id="CustomerForm" ,role = "form" }))
{
    <div class="portlet light bg-inverse formBodyRemoveSideSpace formBodyMinHeight">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-bulb font-red-sunglo"></i>
                <span class="caption-subject font-red-sunglo bold uppercase">Customer</span>
                <span class="caption-helper">@ViewBag.Title</span>
            </div>
            <div class="actions">
                <button class="btn default green-stripe toBeHidden" id="btnResetFltr" type="submit" form="CustomerForm" name="save" onclick="return (ValidateFields(event));">
                    <i class="fa fa-save"></i>
                    <span class="hidden-480">
                        Save & Close
                    </span>
                </button>
                <a href="~/Customer/Index" class="btn default yellow-stripe">
                    <i class="fa fa-list"></i>
                    <span class="hidden-480">
                        All Customers
                    </span>
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            <div class="container-fluid">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.RecCreatedBy)
                @Html.HiddenFor(m => m.RecCreatedDate)

                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label requiredLabel" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control mandatory", placeholder = "Name" })
                    </div>
                </div>

                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.Phone, new { @class = "col-md-3 control-label requiredLabel" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control mandatory", placeholder = "Phone" })
                    </div>
                </div>

                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.Address, new { @class = "col-md-3 control-label" })
                    <div class="col-md-4">
                        @Html.TextAreaFor(m => m.Address, new { @class = "form-control", placeholder = "Address" })
                    </div>
                </div>
                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    </div>
                </div>
                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.Comments, new { @class = "col-md-3 control-label" })
                    <div class="col-md-4">
                        @Html.TextAreaFor(m => m.Comments, new { @class = "form-control", placeholder = "Comments" })
                    </div>
                </div>
            </div>

        </div>
    </div>
}


