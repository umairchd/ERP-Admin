@model ERP.WebApi.Models.VerifyCodeViewModel
@{
    ViewBag.Title = "Verify";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";

}

<div class="block-center mt-xl wd-xxl">
    <!-- START panel-->
    <div class="panel panel-dark panel-flat">
        <div class="panel-heading text-center">
            <a href="#">
                <img src="~/Content/Images/logo.png" alt="Image" class="block-center img-rounded" />
            </a>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "mb-lg", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("provider", @Model.Provider)
                @Html.Hidden("rememberMe", @Model.RememberMe)
                <h4 class="text-center">Enter verification code</h4>
                <hr />
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="form-group has-feedback">
                    @Html.LabelFor(m => m.Code, new { @class = "text-muted" })
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control", required = "" })
                    <span class="fa fa-pin form-control-feedback text-muted"></span>
                    @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
                </div>
                <div class="clearfix">
                    <div class="pull-left mt0">
                        <label>
                            @Html.CheckBoxFor(x => x.RememberBrowser)
                            Dont ask again on this device
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-block btn-primary">Verify</button>
            }
        </div>
    </div>
</div>
