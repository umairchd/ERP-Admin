@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    ViewBag.Title = "Forgot Password Confirmation";
}


<div class="block-center mt-xl wd-xxl">
    <!-- START panel-->
    <div class="panel panel-dark panel-flat">
        <div class="panel-heading text-center">
            <a href="#">
                <img src="~/Content/Images/logo.png" alt="Image" class="block-center img-rounded" />
            </a>
        </div>
        <div class="panel-body">
            <h1>@ViewBag.Title.</h1>
            <div>
                <p>
                    Please check your email to reset your password.
                </p>
            </div>
            <a href="@Url.Action("Login","Account")" class="btn btn-block btn-primary">Login</a>
        </div>
    </div>
</div>



